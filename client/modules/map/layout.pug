mixin map-canvas()
  #map
  script.
      function initMap() {
          // Create a map object and specify the DOM element for display.
          var map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: -34.397, lng: 150.644},
              scrollwheel: false,
              zoom: 8
          });
      }

  script(src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyC7Uu6dvnQka6EL0MAiCCr7_6VfynDigm0&libraries=places,drawing&callback=initMap')

mixin map-tools()
  a.btn.btn-default&attributes({'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Draw polygonal footprint'})#btn-draw-poly
    span.glyphicon.glyphicon-pencil
  a.btn.btn-default#btn-draw-rect
    span.glyphicon.glyphicon-edit
  a.btn.btn-default#btn-draw-city
    span.glyphicon.glyphicon-globe